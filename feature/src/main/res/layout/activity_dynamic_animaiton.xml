<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".animation.dynamicanimation.DynamicAnimaitonActivity">
        <Button
                android:id="@+id/startSpringBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:text="start spring"
        />
        <TextView
                android:id="@+id/springTextView"
                app:layout_constraintTop_toBottomOf="@id/startSpringBtn"
                app:layout_constraintLeft_toLeftOf="@id/startSpringBtn"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="i am a boll"/>
</androidx.constraintlayout.widget.ConstraintLayout>