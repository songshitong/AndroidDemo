<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:gravity="center"
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
    />
    <TextView
            android:text="PictureDrawable"
            android:id="@+id/pictureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="canvasActivity"
            android:id="@+id/canvasActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="paintActivity"
            android:id="@+id/paintActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="drawableActivity"
            android:id="@+id/drawableActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="pathActivity"
            android:id="@+id/pathActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="shaderActivity"
            android:id="@+id/shaderActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="layoutAnimationActivity"
            android:id="@+id/layoutAnimationActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="particleActivity"
            android:id="@+id/particleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="LoadingActivity"
            android:id="@+id/loadingActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="QQDragBubbleActivity"
            android:id="@+id/qqDragBubbleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

    <TextView  android:id="@+id/stickyRecyclerviewAct"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="stickyRecyclerview"
    />
    <TextView  android:id="@+id/springAnimation"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="springAnimation"
    />
    <TextView  android:id="@+id/oscillationView"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="震荡小球"
    />
    <Button  android:id="@+id/growingTreeView"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="生长树"
    />
    <Button  android:id="@+id/jumpBtn"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="scheme jump"
    />
    <Button  android:id="@+id/shareBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="share content"
    />
    <Button  android:id="@+id/startHandler"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="start Handler"
    />
    <Button  android:id="@+id/videoParser"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="videoParser"
    />
    <Button  android:id="@+id/ffmpeg"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="ffmpeg"
    />
</LinearLayout>