               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="生长树"
    />
    <Button  android:id="@+id/xmlParserBtn"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="xml parse"
    />
    <Button  android:id="@+id/wallpaperBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="壁纸"
            />
    <Button  android:id="@+id/jumpBtn"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="scheme jump"
    />
    <Button  android:id="@+id/shareBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="share content"
    />
    <Button  android:id="@+id/startHandler"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="start Handler"
    />
    <Button  android:id="@+id/videoParser"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="videoParser"
    />
    <Button  android:id="@+id/ffmpeg"
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="ffmpeg"
    />
    <Button  android:id="@+id/ringtone"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="ringtone"
            />
    <Button  android:id="@+id/camera"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="camera"
            />
    <Button  android:id="@+id/whatsapp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="whatsapp"
            />
    <Button  android:id="@+id/startActivityForResult"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="startActivityForResult"
            />
<!--    符号兼容-->
    <TextView android:text="测试符号 􀌌 􀱝 􀤆  􀨥"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    <Button  android:id="@+id/material"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="material"
            />
</LinearLayout>
</ScrollView>
