<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <Button
            android:id="@+id/mainNormalActivity"
            android:text="普通activity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/launchActivity"
            android:text="activity launch mode"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/main_dialog"
            android:text="展示dialog"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/mainDialogActivity"
            android:text="展示DialogActivity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/go2Fragment"
            android:text="展示fragment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/go2Menu"
            android:text="展示menu"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/go2Service"
            android:text="展示service"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <Button
            android:id="@+id/layoutWeight"
            android:text="layoutWeight"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <TextView
            android:gravity="center"
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
    />
    <TextView
            android:text="PictureDrawable"
            android:id="@+id/pictureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="canvasActivity"
            android:id="@+id/canvasActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="paintActivity"
            android:id="@+id/paintActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="drawableActivity"
            android:id="@+id/drawableActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="pathActivity"
            android:id="@+id/pathActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="shaderActivity"
            android:id="@+id/shaderActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="layoutAnimationActivity"
            android:id="@+id/layoutAnimationActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="particleActivity"
            android:id="@+id/particleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="LoadingActivity"
            android:id="@+id/loadingActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="QQDragBubbleActivity"
            android:id="@+id/qqDragBubbleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

    <TextView  android:id="@+id/stickyRecyclerviewAct"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="stickyRecyclerview"
    />
    <TextView  android:id="@+id/springAnimation"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="springAnimation"
    />
    <TextView  android:id="@+id/oscillationView"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:text="震荡小球"
    />
